---
import { Image } from "astro:assets";
import cypsiLogo from "/public/assets/cypsi_lab_logo.png";
import HeaderLink from "./HeaderLink.astro";

const currentPath = Astro.url.pathname;
---

<header
	class="fixed top-0 left-0 right-0 bg-white border-b border-gray-200 md:py-8 transition-all duration-300 z-50"
	id="main-header">
	<nav class="container mx-auto px-4 flex justify-between items-center">
		<a
			href="/"
			class="flex items-center">
			<Image
				src={cypsiLogo}
				alt="CyPSi Laboratory Logo"
				class="h-16 w-auto transition-all duration-300 md:h-16"
				id="header-logo"
			/>
		</a>
		<button
			id="menu-toggle"
			class="md:hidden z-50">
			<span class="sr-only">Toggle menu</span>
			<svg
				xmlns="http://www.w3.org/2000/svg"
				class="h-6 w-6"
				fill="none"
				viewBox="0 0 24 24"
				stroke="currentColor">
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					stroke-width="2"
					d="M4 6h16M4 12h16m-7 6h7"
				></path>
			</svg>
		</button>
		<div
			id="sidebar"
			class="fixed top-0 right-0 bottom-0 w-64 bg-gray-700 md:bg-white shadow-lg transform translate-x-full transition-transform duration-300 ease-in-out md:relative md:transform-none md:shadow-none md:w-auto px-0 md:px-6">
			<div class="block md:hidden py-6"></div>
			<ul class="flex flex-col space-y-8 p-6 md:flex-row md:space-y-0 md:space-x-6 md:p-0">
				<!-- <hr class="p-0 m-0" /> -->
				<HeaderLink
					href="/"
					isActive={currentPath === "/"}
					>Home</HeaderLink
				>
				<HeaderLink
					href="/research"
					isActive={currentPath === "/research"}
					>Research Focus</HeaderLink
				>
				<HeaderLink
					href="/publications"
					isActive={currentPath === "/publications"}
					>Publications</HeaderLink
				>
				<HeaderLink
					href="/people"
					isActive={currentPath === "/people"}
					>People</HeaderLink
				>
				<HeaderLink
					href="/join"
					isActive={currentPath === "/join"}
					>Join Us</HeaderLink
				>
				<HeaderLink
					href="/contact"
					isActive={currentPath === "/contact"}
					>Contact Us</HeaderLink
				>
			</ul>
		</div>
	</nav>
</header>

<script>
	const header = document.getElementById("main-header");
	const logo = document.getElementById("header-logo");
	const menuToggle = document.getElementById("menu-toggle");
	const sidebar = document.getElementById("sidebar");

	let lastScrollY = window.scrollY;

	function updateHeader() {
		const scrollY = window.scrollY;

		if (scrollY > 50) {
			header.classList.add("md:py-2", "shadow-md");
			header.classList.remove("md:py-8");
			logo.classList.add("scale-90");
		} else {
			header.classList.remove("md:py-2", "shadow-md");
			header.classList.add("md:py-8");
			logo.classList.remove("scale-90");
		}

		lastScrollY = scrollY;
	}

	function toggleMenu() {
		sidebar.classList.toggle("translate-x-full");
		document.body.classList.toggle("overflow-hidden");
		menuToggle.classList.toggle("text-red-800");
		menuToggle.innerHTML =
			sidebar.classList.contains("translate-x-full") ?
				'<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>'
			:	'<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" /></svg>';
	}

	function handleClickOutside(event) {
		if (!sidebar.contains(event.target) && !menuToggle.contains(event.target)) {
			sidebar.classList.add("translate-x-full");
			document.body.classList.remove("overflow-hidden");
			menuToggle.classList.remove("text-red-800");
			menuToggle.innerHTML =
				'<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" /></svg>';
		}
	}

	sidebar.addEventListener("click", function (event) {
		event.stopPropagation();
	});

	menuToggle.addEventListener("click", function (event) {
		event.stopPropagation();
		toggleMenu();
	});

	document.addEventListener("click", handleClickOutside);

	window.addEventListener("scroll", updateHeader);
	updateHeader();
</script>

<style>
	/* Add some padding to the top of the body to account for the fixed header */
	:global(body) {
		padding-top: 5rem;
	}

	@media (min-width: 768px) {
		:global(body) {
			padding-top: 7rem;
		}
	}
</style>
