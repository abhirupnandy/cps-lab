---
interface Props {
	href: string;
	isActive?: boolean;
}

const { href, isActive = false } = Astro.props;
---

<li class="flex flex-col justify-center">
	<a
		href={href}
		class:list={[
			"pb-1",
			"transition-colors duration-200 text-xl font-semibold text-white hover:scale-105",
			isActive ?
				"md:text-[#910052] md:border-b-4 md:border-[#910052]"
			:	"md:text-gray-700 hover:text-[#910052] hover:md:border-b-4 border-[#910052] text-opacity-65",
		]}>
		<slot />
	</a>
	<hr
		class:list={[
			"pt-2 pb-0 block md:hidden w-full",
			isActive ? "border-red-800 border-2" : "border-gray-400",
		]}
	/>
</li>
