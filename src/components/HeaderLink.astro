---
interface Props {
	href: string;
	isActive?: boolean;
}

const { href, isActive = false } = Astro.props;
---

<li class="flex flex-col justify-center">
	<a
		href={href}
		class:list={[
			"pb-1",
			"transition-colors duration-200 font-poppins font-semibold text-[#1E000D] text-base leading-7 hover:scale-105",
			isActive ?
				"md:text-[#A0034C] md:border-b-4 md:border-[#A0034C]"
			:	"md:text-gray-700 hover:text-[#A0034C] hover:md:border-b-4 border-[#A0034C] text-opacity-65",
		]}>
		<slot />
	</a>
	<hr
		class:list={[
			"pt-4 pb-0 mb-0 block md:hidden w-full",
			isActive ? "border-red-800 border-2" : "border-gray-400",
		]}
	/>
</li>


