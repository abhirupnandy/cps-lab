  {
    name: "John Doe",
    position: "CEO, Example Company",
    quote: "This service has transformed the way we operate.",
    image: "/images/testimonial1.jpg",
  },
  {
    name: "Jane Smith",
    position: "CTO, Another Company",
    quote: "Absolutely fantastic! Highly recommended.",
    image: "/images/testimonial2.jpg",
  },
  {
    name: "Alice Johnson",
    position: "Product Manager, Tech Solutions",
    quote: "A game changer for our workflow!",
    image: "/images/testimonial3.jpg",
  },
  {
    name: "Mark Brown",
    position: "Designer, Creative Agency",
    quote: "Incredible support and service!",
    image: "/images/testimonial4.jpg",
  },
  {
    name: "Emily Davis",
    position: "Marketing Director, Business Co.",
    quote: "Exceeded our expectations!",
    image: "/images/testimonial5.jpg",
  },
  {
    name: "Michael White",
    position: "Operations Head, Global Corp",
    quote: "Reliable and efficient, highly recommend!",
    image: "/images/testimonial6.jpg",
  },
  {
    name: "Sarah Wilson",
    position: "HR Lead, People First",
    quote: "Their service is top-notch!",
    image: "/images/testimonial7.jpg",
  },
  {
    name: "David Lee",
    position: "Finance Director, Money Matters",
    quote: "They helped us save time and money.",
    image: "/images/testimonial8.jpg",
  },
];

---

<section class="py-10 bg-gray-100">
  <div class="container mx-auto px-4">
<div class="my-10">
<!-- <HeadingStyle3 Text="Their Experience" ColorHex="var(--accent)]"/> -->
</div>
    <div class="swiper-container">
      <div class="swiper-wrapper">
        {testimonials.map((testimonial) => (
          <div class="swiper-slide bg-white shadow-lg rounded-lg p-6 text-center">
            <img
              src={testimonial.image}
              alt={testimonial.name}
              class="w-24 h-24 rounded-full mx-auto mb-4"
            />
            <h3 class="text-lg font-semibold">{testimonial.name}</h3>
            <p class="text-gray-600">{testimonial.position}</p>
            <p class="mt-4 text-gray-700">"{testimonial.quote}"</p>
          </div>
        ))}
      </div>
      <!-- Add pagination and navigation buttons -->
      <div class="swiper-pagination"></div>
      <div class="swiper-button-next"></div>
      <div class="swiper-button-prev"></div>
    </div>
  </div>
</section>

<script>
  import Swiper from 'swiper';
  import 'swiper/swiper-bundle.css';

  const swiper = new Swiper('.swiper-container', {
    slidesPerView: 3,
    spaceBetween: 28,
    centeredSlides: true,
    loop: true,
    pagination: {
      el: '.swiper-pagination',
      clickable: true,
    },
    navigation: {
      nextEl: '.swiper-button-next',
      prevEl: '.swiper-button-prev',
    },
    breakpoints: {
      0: {
        slidesPerView: 1,
        spaceBetween: 20,
        centeredSlides: false,
      },
      768: {
        slidesPerView: 2,
        spaceBetween: 28,
        centeredSlides: true,
      },
      1024: {
        slidesPerView: 3,
        spaceBetween: 32,
      },
    },
  });
</script>

<style>
  /* Additional styles can be added here */
</style>


